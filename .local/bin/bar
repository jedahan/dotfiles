#!/bin/env zsh

exec 2> /dev/null
wireless_ssid=$(iwgetid -r wlan0)
wireless_address=$(ip a show wlan0 | grep 'inet ' | cut -d' ' -f6 | cut -d'/' -f1)
wired_address=$(ip a show enp35s0u1u3u3 | grep 'inet ' | cut -d' ' -f6 | cut -d'/' -f1)
clock=$(date +"%H:%M")
bat=$(</sys/class/power_supply/BAT0/capacity)
pow=$( grep -q 0 /sys/class/power_supply/AC/online && echo x || echo z)

echo "$wired_address $wireless_address $wireless_ssid $clock $pow$bat"
