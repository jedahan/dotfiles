#!/bin/env bash

wireless_ssid=$(iwgetid -r wlan0 2>/dev/null)
wireless_address=$(ip a show wlan0 2>/dev/null | grep 'inet ' | cut -d' ' -f6 | cut -d'/' -f1)
wired_address=$(ip a show enp35s0u1u3u3 2>/dev/null | grep 'inet ' | cut -d' ' -f6 | cut -d'/' -f1)
clock=$(date +"%H:%M")
bat=$(cat /sys/class/power_supply/BAT0/capacity 2>/dev/null)


echo "$wired_address $wireless_address $wireless_ssid $clock $bat%"
